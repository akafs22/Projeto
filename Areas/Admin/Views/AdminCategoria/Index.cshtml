@model IEnumerable<Projeto.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Categoria</h1>

<p>
    <a asp-action="Create">Criar</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.CategoriaId">Edit</a> |
                <a asp-action="Detalhes" asp-route-id="@item.CategoriaId">Details</a> |
                <a asp-action="Deletar" asp-route-id="@item.CategoriaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
