@model CarrinhoViewModel
<div class="Container">
    <div class="row checkoutForm">
        <div>
            <i class="bi bi-cart text-white"></i>
            <h4 class="text-white">Seu carrinho de
                compras : </h4>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-white">Quantidade</th>
                    <th class="text-white">Item</th>
                    <th class="text-right text-white">Pre√ßo</th>
                    <th class="text-right text-white">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Carrinho.CarrinhoItens)
                {
                    <tr>
                        <td class="text-center text-white">@item.Quantidade</td>
                        <td class="text-left text-white">@item.Item.Nome</td>
                        <td class="text-right text-white">@item.Item.Preco.ToString("c")</td>
                        <td class="text-right text-white">
                            @((item.Quantidade * item.Item.Preco).ToString("c"))
                        </td>
                        <td class="text-center text-white">
                            <a asp-controller="Carrinho" asp-action="RemoverCarrinho"
                                asp-route-movelId="@item.Item.ItemId">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right text-white">Total:</td>
                    <td class="text-right">
                        @Model.CarrinhoTotal.ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-light" asp-controller="Pedido" asp-action="Checkout">Encerrar
                    Pedido</a>

                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-light" asp-controller="Item" asp-action="List">Continuar
                    Comprando</a>
            </div>
        </div>
        <br />
    </div>
</div>